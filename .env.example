# Enable GitHub OAuth Authentication (optional)
# Set to "true" to enable, "false" or omit to disable
# Note: FastMCP cloud handles auth at platform level, so leave this false
ENABLE_AUTH=false

# GitHub OAuth Configuration (only required if ENABLE_AUTH=true)
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Base URL for the MCP server (only required if ENABLE_AUTH=true)
# For local development: http://localhost:8080
# For production: https://your-domain.com
AUTH_BASE_URL=http://localhost:8080
